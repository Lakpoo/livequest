{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="profile-update">
        <h1 class="profile-title">Mise Ã  jour Profile</h1>

        {{ form_start(form, { 'attr': { 'class': 'profile-form' } }) }}
        <div class="form-group">
            {{ form_label(form.username, null, { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.username, { 'attr': { 'class': 'form-input' } }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.nom, null, { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.nom, { 'attr': { 'class': 'form-input' } }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, null, { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.email, { 'attr': { 'class': 'form-input' } }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password, null, { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.password, { 'attr': { 'class': 'form-input' } }) }}
        </div>

        <button type="submit" class="form-button">Enregistrer</button>
        {{ form_end(form) }}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post" action="{{ path('logout') }}" class="logout-form">
            <button type="submit" class="form-button logout-button">Deconnexion</button>
        </form>
    </div>
{% endblock %}
