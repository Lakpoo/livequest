{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1 class="login">Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="login-form">
        <div class="form-group">
            <label for="username" class="form-label">Nom d'utilisateur :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus class="form-input">
        </div>
        <div class="form-group">
            <label for="password" class="form-label">Mot de passe :</label>
            <input type="password" id="password" name="_password" required class="form-input">
        </div>
        <button type="submit" class="form-button">Connexion</button>
    </form>
{% endblock %}
